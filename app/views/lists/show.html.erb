<h1><%= @list.name %></h1>
<p><strong>List ID: </strong><%= @list.id %></p>
<% @movies.each do |movie| %>
  <p><strong>Movie title: </strong><%= movie.title %></p>
  <p><strong>Movie overview: </strong><%= movie.overview %></p>
  <p><strong>Movie rating: </strong><%= movie.rating %></p>
  <%= image_tag(movie.poster_url) %>
  <% @book = movie.bookmarks %>
  <% @book.each do |bookmark| %>
    <p><%= bookmark.comment%> - <%= link_to "remove", bookmark_path(bookmark), data: { turbo_method: :delete } %></p>
  <% end %>
<% end %>
